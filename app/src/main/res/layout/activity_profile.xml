<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tool:context=".profile">
    <TextView
        android:id="@+id/profileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:fontFamily="@font/montserrat_med"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"/>
    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/profileTitle"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:src="@drawable/avatar2"
        android:padding="5dp"
        android:background="@drawable/outline_circle"
        android:clipToOutline="true"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/profileImage"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_below="@id/profileTitle">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Sardar Muneeb"
            android:fontFamily="@font/montserrat_med"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/userid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#F36600"
            android:text="#User 1140"
            android:fontFamily="@font/montserrat_med"
            android:textSize="14sp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:orientation="vertical"
        android:layout_below="@id/profileImage"
        android:layout_marginTop="40dp">
        <TextView
            android:id="@+id/editProfile"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/outline_box"
            android:text="Edit Profile"
            android:fontFamily="@font/montserrat_med"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:drawableStart="@drawable/user_w"
            android:gravity="center_vertical|start"
            android:padding="20dp"
            android:drawablePadding="14dp"/>
        <TextView
            android:id="@+id/location"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/outline_box"
            android:text="Location"
            android:fontFamily="@font/montserrat_med"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:drawableStart="@drawable/pro_pin_w"
            android:gravity="center_vertical|start"
            android:padding="20dp"
            android:drawablePadding="14dp" />
        <TextView
            android:id="@+id/changePassword"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/outline_box"
            android:text="Change Password"
            android:fontFamily="@font/montserrat_med"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:drawableStart="@drawable/lock"
            android:gravity="center_vertical|start"
            android:padding="20dp"
            android:drawablePadding="14dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/logout"
        android:layout_marginHorizontal="25dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/outline_box_o"
        android:text="Log out"
        android:textSize="14dp"
        android:fontFamily="@font/montserrat_med"
        android:textStyle="bold"
        android:textColor="#F36600"
        android:drawableStart="@drawable/logout"
        android:gravity="center_vertical|start"
        android:padding="20dp"
        android:drawablePadding="14dp"
        android:backgroundTint="#F36600"
        android:backgroundTintMode="multiply"
        android:layout_above="@+id/bottom"
        android:layout_marginBottom="50dp" />

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_bar"
        android:padding="15dp"
        android:weightSum="4">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/home_o"
                app:tint="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_med"
                android:layout_marginTop="5dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/save_w"
                app:tint="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saved"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_med"
                android:textSize="14sp"
                android:layout_marginTop="5dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/review_w"
                app:tint="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Review"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_med"
                android:textSize="14sp"
                android:layout_marginTop="5dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/profile_w"
                app:tint="#F36600"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="#F36600"
                android:fontFamily="@font/montserrat_med"
                android:textSize="14sp"
                android:layout_marginTop="5dp" />
            <View
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/button_box_o"
                android:layout_marginTop="3dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>