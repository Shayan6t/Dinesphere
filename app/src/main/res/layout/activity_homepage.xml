<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".homepage">

    <!-- Top Bar (Fixed) -->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingTop="30dp"
        android:paddingBottom="10dp"
        android:background="@color/black">

        <ImageButton
            android:id="@+id/address_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/map_pin_w"/>

        <TextView
            android:id="@+id/curr_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time Square Way, Brooklyn Street"
            android:fontFamily="@font/montserrat_med"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/address_icon"
            android:layout_alignTop="@id/address_icon"/>

        <ImageButton
            android:id="@+id/notification_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/address_icon"
            android:layout_marginRight="15dp"
            android:background="@drawable/notification_w"/>
    </RelativeLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_bar"
        android:layout_above="@id/bottom_nav"
        android:scrollbars="none"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="@font/montserrat_med"
                android:background="@drawable/edittext_box"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"/>

            <ImageButton
                android:id="@+id/search_mag_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/search_icon"
                android:layout_marginTop="-37dp"
                android:layout_marginLeft="28dp"/>

            <TextView
                android:id="@+id/street_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search for food source"
                android:fontFamily="@font/montserrat_med"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="-23dp"/>

            <TextView
                android:id="@+id/navigate_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="25dp"
                android:text="@string/navigate_text"
                android:fontFamily="@font/montserrat_med" />

            <!-- Restaurants within 5km section -->
            <TextView
                android:id="@+id/outlets_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurants within 5km"
                android:fontFamily="@font/montserrat_med"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/restaurantRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clipToPadding="false"
                android:paddingEnd="15dp"
                android:nestedScrollingEnabled="false"
                android:orientation="horizontal" />

            <!-- All Restaurants section -->
            <TextView
                android:id="@+id/somethingNew_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Restaurants"
                android:fontFamily="@font/montserrat_med"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/allRestaurantRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:clipToPadding="false"
                android:paddingEnd="15dp"
                android:nestedScrollingEnabled="false"
                android:orientation="horizontal" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar (Fixed) -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_bar"
        android:padding="10dp"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/home_o" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="#F36600"
                android:textSize="13sp"
                android:fontFamily="@font/montserrat_med"
                android:layout_marginTop="5dp" />
            <View
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/button_box_o"
                android:layout_marginTop="3dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/save_w"
                app:tint="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saved"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_med"
                android:textSize="13sp"
                android:layout_marginTop="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/review_w"
                app:tint="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Review"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_med"
                android:textSize="13sp"
                android:layout_marginTop="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/profile">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/profile_w"
                app:tint="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_med"
                android:textSize="13sp"
                android:layout_marginTop="5dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>