<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".change_password">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chevron_left"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:fontFamily="@font/montserrat_med"
            android:textColor="#F36600"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter a different password with the previous"
            android:fontFamily="@font/montserrat_med"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/password_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Password"
            android:fontFamily="@font/montserrat_med"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="100dp"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp">
            <EditText
                android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edittext_box"
                android:paddingLeft="12dp"
                android:paddingRight="44dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/montserrat_med"
                android:textColor="@color/white"
                android:inputType="textPassword" />
            <ImageView
                android:id="@+id/password_toggle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:layout_marginEnd="25dp"
                android:src="@drawable/hide_eye" />
        </FrameLayout>
        <TextView
            android:id="@+id/confirmpassword_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:fontFamily="@font/montserrat_med"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="15dp"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="20dp">
            <EditText
                android:id="@+id/input_confirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edittext_box"
                android:paddingLeft="12dp"
                android:paddingRight="44dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_med"
                android:inputType="textPassword" />
            <ImageView
                android:id="@+id/password_toggle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:layout_marginEnd="25dp"
                android:src="@drawable/hide_eye" />
        </FrameLayout>
        <RelativeLayout
            android:id="@+id/change_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="170dp"
            android:clickable="true"
            android:focusable="true">
            <ImageButton
                android:id="@+id/change_btn_back"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button_box_o"
                android:layout_marginTop="10dp"
                android:clickable="false"
                android:focusable="false"/>
            <TextView
                android:id="@+id/change_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset Password"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat_med"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_alignTop="@id/change_btn_back"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13dp"
                android:clickable="false"
                android:focusable="false"/>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>