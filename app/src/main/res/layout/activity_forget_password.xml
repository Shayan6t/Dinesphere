<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".forget_password">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chevron_left"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forget Password"
            android:fontFamily="@font/montserrat_med"
            android:textColor="#F36600"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your registered email below"
            android:fontFamily="@font/montserrat_med"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/email_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email  Address"
            android:fontFamily="@font/montserrat_med"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="8dp" />
        <EditText
            android:id="@+id/email_input"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittext_box"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/montserrat_med"
            android:hint=""
            android:textColor="@color/white"
            android:inputType="textEmailAddress" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp">
            <RelativeLayout
                android:id="@+id/sendOTP_btn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:padding="5dp">
                <ImageButton
                    android:id="@+id/sendOTP_back"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/outline_box_o"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/sendOTP_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send OTP"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_med"
                    android:textColor="#F36600"
                    android:textSize="16sp"
                    android:layout_alignTop="@id/sendOTP_back"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="13dp"/>
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/OTP_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter OTP"
            android:fontFamily="@font/montserrat_med"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="8dp" />
        <LinearLayout
            android:id="@+id/OTP_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="5"
            android:layout_marginTop="15dp">
            <TextView
                android:id="@+id/otp1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@drawable/outline_box_o"
                android:text="6"
                android:textColor="#F36600"
                android:gravity="center"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/otp2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/outline_box_o"
                android:layout_weight="1"
                android:text="0"
                android:textColor="#F36600"
                android:gravity="center"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/otp3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/outline_box_o"
                android:text="6"
                android:textColor="#F36600"
                android:gravity="center"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/otp4"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/outline_box_o"
                android:text="0"
                android:textColor="#F36600"
                android:gravity="center"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/otp5"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/outline_box_o"
                android:text="6"
                android:textColor="#F36600"
                android:gravity="center"
                android:textSize="20sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/change_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="100dp">
            <ImageButton
                android:id="@+id/change_btn_back"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button_box_o"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/change_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat_med"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_alignTop="@id/change_btn_back"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13dp"/>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>